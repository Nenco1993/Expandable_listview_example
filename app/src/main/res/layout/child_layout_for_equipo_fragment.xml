<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:weightSum="1"
              android:layout_height="wrap_content" android:background="#dedcdc">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="0.5"
                  android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="number"
                android:id="@+id/tvPlayerNumberID" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlayerPictureID" android:layout_gravity="center_horizontal"
                android:src="@drawable/default_player_small"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tvPlayerNameID" android:layout_gravity="center_horizontal" android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="0.5"
                  android:orientation="vertical" android:id="@+id/equipoRightLayoutID">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="number"
                android:id="@+id/tvPlayerNumber2ID" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlayerPicture2ID" android:layout_gravity="center_horizontal"
                android:src="@drawable/default_player_small"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tvPlayerName2ID" android:layout_gravity="center_horizontal" android:singleLine="true"
        />

    </LinearLayout>


</LinearLayout>