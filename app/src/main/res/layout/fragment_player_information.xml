<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:weightSum="1"
              android:layout_height="match_parent" android:background="#cdcdcd">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:layout_weight="0.6" android:background="#396195">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:weightSum="1"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="0.6"
                          android:orientation="horizontal">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ivPlayerInfoLogoID" android:layout_gravity="bottom"
                        android:layout_marginRight="5dp" android:src="@drawable/default_player_small"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="0.4"
                          android:orientation="horizontal">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:weightSum="1"
                              android:orientation="horizontal">


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="0.5"
                                  android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="name"
                                android:id="@+id/tvPlayerInfoPlayerNameID" android:singleLine="false"
                                android:lines="2" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="number"
                                android:id="@+id/tvPlayerInfoPlayerNumberID" android:textSize="@dimen/textSize"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="number"
                                android:visibility="invisible"
                                android:id="@+id/tvPla32yerInfoPlayerNumberID" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="nation"
                                android:id="@+id/tvNationMain" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="nation value"
                                android:id="@+id/tvPlayerInfoNationValueID" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="position"
                                android:id="@+id/tvPositionMain" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="position value"
                                android:id="@+id/tvPlayerInfoPositionID" android:textSize="@dimen/textSize"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"

                                  android:layout_weight="0.5"
                                  android:orientation="vertical" android:baselineAligned="false">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="name"
                                android:id="@+id/tvPlayerInffffoPlayerNameID" android:singleLine="false"
                                android:lines="2" android:visibility="invisible" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="number"
                                android:id="@+id/tvPlayerInfdfsfdfoPlayerNumberID" android:visibility="invisible"
                                android:textSize="@dimen/textSize"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="number"
                                android:visibility="invisible"
                                android:id="@+id/tvPla32yerInfoPlayerNumberID" android:textSize="@dimen/textSize"/>


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="age"
                                android:id="@+id/tvAgeMain" android:layout_gravity="right"
                                android:layout_marginRight="5dp" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="age value"
                                android:id="@+id/tvPlayerInfoPlayerAgeID" android:layout_gravity="right"
                                android:layout_marginRight="5dp" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="better leg"
                                android:id="@+id/tvPiernaMain" android:layout_gravity="right"
                                android:layout_marginRight="5dp" android:textSize="@dimen/textSize"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="better leg value"
                                android:id="@+id/tvPlayerInfoDominantHandID" android:layout_gravity="right"
                                android:layout_marginRight="5dp" android:textSize="@dimen/textSize"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="0.4" android:background="#c0c0c0">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:weightSum="100"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="40"
                          android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="HABILIDADES"
                        android:textSize="@dimen/textSize"
                        android:id="@+id/tvHabilidadesID" android:layout_gravity="center_horizontal"
                        android:textStyle="bold" android:layout_marginTop="15dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="30"
                          android:orientation="vertical" android:layout_gravity="center_horizontal">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:weightSum="9"
                              android:orientation="horizontal">


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="3"
                                  android:orientation="vertical">



                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/habilidadesPicsHeight"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/shield" android:src="@drawable/icon_shield_1x"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Defensa"
                                android:id="@+id/tvDefensaHeadline" android:layout_gravity="center_horizontal"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="dV"
                                android:id="@+id/tvDefendID" android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="3"
                                  android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/habilidadesPicsHeight"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/lightining" android:src="@drawable/icon_lightning_1x"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Velocidad"
                                android:id="@+id/tvVelocidadheadline" android:layout_gravity="center_horizontal"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="vV"
                                android:id="@+id/tvLightingID" android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="3"
                                  android:orientation="vertical">


                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/habilidadesPicsHeight"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/sniper" android:src="@drawable/icon_crosshair_1x"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Ataque"
                                android:id="@+id/tvAtaqueHeadline" android:layout_gravity="center_horizontal"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="aV"
                                android:id="@+id/tvAttackID" android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="30"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:weightSum="9"
                              android:orientation="horizontal">


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="3"
                                  android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/habilidadesPicsHeight"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/gymicon" android:src="@drawable/icon_weights_1x"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Fuerza"
                                android:id="@+id/tvFuerzaHeadlineID" android:layout_gravity="center_horizontal"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="fV"
                                android:id="@+id/tvGymID" android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="3"
                                  android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/habilidadesPicsHeight"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/shoeicon" android:src="@drawable/icon_shoe_1x"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Tecnica"
                                android:id="@+id/tvTecnicaHeadline" android:layout_gravity="center_horizontal"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="tV"
                                android:id="@+id/tvShoeID" android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_weight="3"
                                  android:orientation="vertical">


                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/habilidadesPicsHeight"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/ballicoin" android:src="@drawable/icon_ball_1x"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Golpe"
                                android:id="@+id/tvGolpeHeadlineID" android:layout_gravity="center_horizontal"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="gV"
                                android:id="@+id/tvBallID" android:layout_gravity="center_horizontal"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>